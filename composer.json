{
    "name": "roygoldman/drupal-project-installers",
    "description": "Drupal component installation path configuration for projects",
    "type": "composer-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Rich Gerdes",
            "email": "rich@richgerdes.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "composer-plugin-api": "^1.1",
        "composer/installers": "^1.2",
        "roygoldman/composer-installers-discovery": "^1.0.3"
    },
    "autoload": {
        "psr-4": {"RoyGoldman\\DrupalProjectInstallers\\": "src/"}
    },
    "extra": {
        "class": "RoyGoldman\\DrupalProjectInstallers\\Plugin"
        "installer-paths": {
            "web": ["type:drupal-core"],
            "web/sites/all/libraries/{$name}": ["type:drupal-library"],
            "web/sites/all/modules/contrib/{$name}": ["type:drupal-module"],
            "web/sites/all/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "web/sites/all/themes/{$name}": ["type:drupal-theme", "type:drupal-custom-theme"],
            "web/sites/all/drush/{$name}": ["type:drupal-drush"]
        }
    }
}
